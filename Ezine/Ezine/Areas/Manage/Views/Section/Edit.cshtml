@model IList<Ezine.ViewModels.SectionViewModel>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h2>【@Model.FirstOrDefault().EzineName】 编辑章节</h2>

<form role="form" action="/Manage/Section/Edit" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="name" class="control-label col-md-2">期刊名称</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="EzineName" name="EzineName" value="@Model.FirstOrDefault().EzineName" readonly>
                <input type="hidden" name="EzineId" id="EzineId" value="@Model.FirstOrDefault().EzineId" />
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="control-label col-md-2">时间</label>
            <div class="col-md-10">
                <input size="16" type="text" value="@Model.FirstOrDefault().PublishDate.ToString("yyyy-MM-dd")" readonly class="form-control"
                       id="publishDate" name="publishDate">
            </div>
        </div>

        <div class="form-group">
            <label for="name" class="control-label col-md-2">章节名称</label>
            <div class="col-md-10">
                @foreach (var item in Model)
                {
                    <input type="hidden" name="SectionId" value="@item.SectionId" />
                    <div style="margin-bottom: 10px;">
                        <input type="text" class="form-control" name="SectionName" id="SectionName" data-id="" value="@item.SectionName">
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("返回列表", "Index", "Ezine")
</div>