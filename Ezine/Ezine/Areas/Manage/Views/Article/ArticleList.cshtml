@model IList<Ezine.ViewModels.ArticleViewModel>

@{
    ViewBag.Title = "ArticleList";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h2>【@Model.FirstOrDefault().EzineName】文章列表</h2>
<button type="button" id="btnAdd" class="btn btn-primary" ng-click="">新增文章</button>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <td>名称</td>
                <td>作者</td>
                <td>赞同</td>
                <td>时间</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].Author</td>
                    <td>@Model[i].Agrees</td>
                    <td>@Model[i].AddDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="/Manage/Article/Edit/@Model[i].ArticleId">编辑</a>&nbsp;&nbsp;
                        <a href="/Manage/Article/Delete/@Model[i].ArticleId">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $('#btnAdd').on('click', function (e) {
        location.href = '/Manage/Article/Add/@Model.First().EzineId';
    });
</script>