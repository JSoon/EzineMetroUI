@model IList<Ezine.ViewModels.ArticleViewModel>

@{
    ViewBag.Title = "ArticleList";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<h2>【@Model.FirstOrDefault().EzineName】文章列表</h2>
<button type="button" id="btnAdd" class="btn btn-primary">新增文章</button>
<div class="table-responsive" ng-controller="ezineList">
    <table class="table">
        <thead>
            <tr>
                <td>名称</td>
                <td>作者</td>
                <td>赞同</td>
                <td>时间</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].Author</td>
                    <td>@Model[i].Agrees</td>
                    <td>@Model[i].AddDate.ToString("yyyy-MM-dd")</td>
                    <td><a href="#">编辑</a>&nbsp;&nbsp;<a href="#">删除</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>