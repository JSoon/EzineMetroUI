<!DOCTYPE html>
<html ng-app="ezineApp">
<head>
    <meta charset="utf-8">
    <meta name="keywords" content="SJ Metro Ezine">
    <meta name="description" content="SJ Metro Ezine v0.0.1">
    <meta name="author" content="J.Soon">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js")
    @Scripts.Render("http://cdn.bootcss.com/bootstrap/3.2.0/js/bootstrap.min.js")
    @Scripts.Render("http://cdn.bootcss.com/angular.js/1.3.0-beta.8/angular.min.js")
    @Scripts.Render("http://cdn.bootcss.com/angular.js/1.3.0-beta.8/angular-route.min.js")
    @Scripts.Render("http://cdn.bootcss.com/angular.js/1.3.0-beta.8/angular-resource.min.js")
    <style>
        #sjCopyright {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            line-height: 30px;
            font-size: 12px;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.5);
            color: #999;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Account")</li>
                    <li>@Html.ActionLink("封面", "Index", "Ezine")</li>
                    <li>@Html.ActionLink("目录", "Index", "Section")</li>
                    <li>@Html.ActionLink("文章", "Index", "Article")</li>
                    <li>@Html.ActionLink("用户", "User", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <div class="container  body-content">
        <!--[if lt IE 9]>
        <h1 style="color: #fff !important;">Ouch ! Browser support :</h1>
        <h3 style="color: #fff !important;">IE9+, Chrome, Firefox, Opera, Safari</h3>
        <![endif]-->
        @RenderBody()
    </div>
    <footer id="sjCopyright">
        Copyright &copy; 2014 Chengdu Remine Medical Infomation Technology Co., Ltd. All Rights Reserved.
    </footer>
    @Scripts.Render("~/Scripts/app.js")
    @Scripts.Render("~/Scripts/controllers.js")
    @RenderSection("scripts", required: false)
</body>
</html>